{% extends 'base.html.twig' %}
{% block body %}


    <h1 class="page-header">Latest Todos</h1>

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Todo</th>
            <th>Due Date,</th>
            <th>Level</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>
            <td>{{ todo.dueDate|date('F j, Y, g:i a') }}</td>
            <td>{{ todo.priority }}</td>
            <td>
                <a href="/todo/details/{{ todo.id }}" class="btn btn-success" style="border-radius: 0px; padding: 3px 10px;">View</a>
                <a href="/todo/edit/{{ todo.id }}" class="btn btn-default" style="border-radius: 0px; padding: 3px 10px;">Edit</a>
                <a href="/todo/delete/{{ todo.id }}" class="btn btn-danger" style="border-radius: 0px; padding: 3px 10px;">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

